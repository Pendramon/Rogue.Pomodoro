<UserControl x:Class="Rogue.Pomodoro.WPF.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mainContent="clr-namespace:Rogue.Pomodoro.WPF.ViewModels.MainContent"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance mainContent:HomeViewModel}">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Pomodoro" Command="{Binding GoToPomodoroTimer}" Padding="15 5 15 5" Margin="0,0,0,20" />
        <Button Content="Settings" Command="{Binding GoToSettings}" Padding="15 5 15 5" />
    </StackPanel>
</UserControl>
